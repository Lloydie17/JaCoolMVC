<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Ja's Cool Coffee</title>
    @Styles.Render("~/Content/main.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <noscript><link rel="stylesheet" href="Content/noscript.css" /></noscript>
    <link rel="stylesheet" href="Content/Main.css" />
</head>
<body>
    <div id="page-wrapper">
        <header>
            <section id="header">
                <!-- Logo -->
                <h1><a href="@Url.Action("Index", "Home")">Ja's Cool Coffee</a></h1>
                @RenderSection("NavContent", required: false)
            </section>
        </header>
        <div id="banner">
            @RenderSection("BannerContent", required: false)
        </div>
        <div id="main">
            @RenderBody()
            @RenderSection("MainContent", required: false)
        </div>
        <footer>
            <div class="float-center">
                <p>&copy; @DateTime.Now.Year - Ja's Cool Coffee</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/main.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("Scripts", required: false)
    <script src="~/Scripts/main.js"></script>
</body>
</html>
